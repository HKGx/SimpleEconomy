{
  "schemaVersion": 1,
  "id": "simple_economy",
  "version": "${mod_version}",

  "name": "Simple Economy",
  "description": "A simple serverside mod for managing economy",
  "authors": [
    "HKGx"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/HKGx/diamond-economy"
  },

  "license": "MIT",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.hkgx.simple_economy.SimpleEconomy"
    ],
    "cardinal-components": [
      "com.hkgx.simple_economy.EconomyComponents"
    ]
  },
  "mixins": [
    "simple_economy.mixins.json"
  ],

  "custom": {
    "cardinal-components": ["simple_economy:balance"]
  },
  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}